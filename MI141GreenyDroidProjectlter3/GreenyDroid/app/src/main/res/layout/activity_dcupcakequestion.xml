<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/cupcaked"
        />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginBottom="48dp"
            android:id="@+id/radioD">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="a. green bananas, watermelon, and spinach"
                android:id="@+id/radioButtonA"
                android:checked="false"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="b. green pears, green bananas, watermelon, and tomato"
                android:id="@+id/radioButtonB"
                android:layout_marginTop="10dp"
                android:layout_alignTop="@+id/radioButtonA"
                android:layout_alignLeft="@+id/radioButtonA"
                android:layout_alignStart="@+id/radioButtonA"
                android:checked="false"
                />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="c. tomato green, green pears, green bananas, and watermelon"
                android:id="@+id/radioButtonC"
                android:layout_marginTop="10dp"
                android:layout_alignTop="@+id/radioButtonB"
                android:layout_alignLeft="@+id/radioButtonB"
                android:layout_alignStart="@+id/radioButtonB"
                android:checked="false"
                />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="d. green pears, green bananas, Watermelon and cucumber"
                android:id="@+id/radioButtonD"
                android:layout_marginTop="10dp"
                android:layout_alignTop="@+id/radioButtonC"
                android:layout_alignLeft="@+id/radioButtonC"
                android:layout_alignStart="@+id/radioButtonC"
                android:checked="false"
                />
        </RadioGroup>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/btnNext"
        android:layout_marginTop="400dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

</RelativeLayout>