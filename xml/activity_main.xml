<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ph.edu.apc.greenydroid.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        android:adjustViewBounds="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imgCupcake"
        android:src="@drawable/cupcake"
        android:layout_marginRight="260dp"
        android:layout_marginTop="230dp"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imgDonut"
        android:src="@drawable/donut"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="230dp"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imgEclair"
        android:src="@drawable/eclair"
        android:layout_alignTop="@+id/imgCupcake"
        android:layout_marginRight="250dp"
        android:layout_marginTop="45dp"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imgFroyo"
        android:src="@drawable/froyo"
        android:layout_alignTop="@+id/imgDonut"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="45dp"
        />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imgGingerbread"
        android:src="@drawable/gingerbread"
        android:layout_alignTop="@+id/imgEclair"
        android:layout_marginRight="200dp"
        android:layout_marginTop="65dp"
        />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:id="@+id/imgHoneyComb"
        android:src="@drawable/honeycomb"
        android:layout_alignTop="@+id/imgFroyo"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="80dp"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imgIcecream"
        android:src="@drawable/icecreamsandwich"
        android:layout_alignTop="@+id/imgGingerbread"
        android:layout_marginRight="250dp"
        android:layout_marginTop="60dp"

        />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/imgJellybean"
        android:src="@drawable/jellybean"
        android:layout_alignTop="@+id/imgHoneyComb"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="40dp"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imgKitkat"
        android:src="@drawable/kitkat"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="390dp"

        />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imgLollipop"
        android:src="@drawable/lollipop"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="390dp"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imgMarshmallow"
        android:src="@drawable/marshmallow"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="400dp"
        android:layout_marginBottom="15dp"
        />

    <ImageView
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:id="@+id/imgGreeny"
        android:src="@drawable/greenydroid"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="180dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgHello"
        android:src="@drawable/hello"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="310dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lets Start"
        android:textSize="20dp"
        android:id="@+id/btnStart"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/imgFroyo"
        android:layout_above="@+id/imgIcecream" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:id="@+id/btnSetting"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
